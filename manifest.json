{
  "specVersion": "1.0",
  "type": "stdin",
  "name": "echo-processor",
  "version": "2.0.0",
  "description": "Echo processor v2.0 - actions protocol with execute/terminate support",
  "author": "ProcessMonitor Team",
  "repository": "https://github.com/example/echo-processor",

  "actions": {
    "execute": {
      "description": "Echo back the input message with simulated processing steps",
      "input": {
        "type": "object",
        "properties": {
          "message": {
            "type": "string",
            "description": "Message to echo back"
          },
          "delay": {
            "type": "integer",
            "minimum": 0,
            "maximum": 10,
            "default": 1,
            "description": "Delay in seconds between progress steps"
          },
          "shouldFail": {
            "type": "boolean",
            "default": false,
            "description": "If true, process will fail with error"
          },
          "minRunSeconds": {
            "type": "integer",
            "minimum": 0,
            "maximum": 300,
            "default": 0,
            "description": "Minimum run time in seconds to allow testing terminate"
          }
        },
        "required": ["message"]
      },
      "output": {
        "type": "object",
        "properties": {
          "echoedMessage": { "type": "string" },
          "processedAt": { "type": "string", "format": "date-time" },
          "executionId": { "type": "string" }
        }
      }
    },
    "terminate": {
      "description": "Gracefully terminate a running execution and clean up resources",
      "input": {
        "type": "object",
        "properties": {},
        "required": []
      },
      "output": {
        "type": "object",
        "properties": {
          "cleaned": { "type": "boolean" }
        }
      }
    }
  },

  "execution": {
    "timeout": 60,
    "memoryLimit": "128Mi",
    "cpuLimit": "0.5"
  }
}
