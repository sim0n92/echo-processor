{
  "specVersion": "1.0",
  "type": "stdin",
  "name": "echo-processor",
  "version": "1.1.0",
  "description": "Echo processor v1.1 - echoes input with delay and version tag",
  "author": "ProcessMonitor Team",
  "repository": "https://github.com/example/echo-processor",

  "input": {
    "type": "object",
    "properties": {
      "message": {
        "type": "string",
        "description": "Message to echo back"
      },
      "delay": {
        "type": "integer",
        "minimum": 0,
        "maximum": 10,
        "default": 1,
        "description": "Delay in seconds between progress steps"
      },
      "shouldFail": {
        "type": "boolean",
        "default": false,
        "description": "If true, process will fail with error"
      }
    },
    "required": ["message"]
  },

  "output": {
    "type": "object",
    "properties": {
      "echoedMessage": { "type": "string" },
      "processedAt": { "type": "string", "format": "date-time" },
      "executionId": { "type": "string" }
    }
  },

  "execution": {
    "timeout": 60,
    "memoryLimit": "128Mi",
    "cpuLimit": "0.5"
  }
}
